        <script type="text/javascript">
			//检查规格
			function check_cart(e)
			{
				var formCart = document.forms['formCart'];
				for(i=0;i<formCart.elements.length;i++)
				{
					if(formCart.elements[i].id.substr(0,13) == 'goods_number_')
					{
						console.log(parseInt(formCart.elements[i].value) % parseInt(formCart.elements[i].getAttribute('pkg')));
						if( parseInt(formCart.elements[i].value) % parseInt(formCart.elements[i].getAttribute('pkg')) != 0)
						{
							alert("订购数量必须是"+formCart.elements[i].getAttribute('pkg')+"的整数倍!");
							return;
						}
					}
				}
				window.location = 'flow.php?step=checkout';
			}
			
            function changenum(rec_id, stock,diff, pkg_num)
            {
                var goods_number =Number($('#goods_number_' + rec_id).val()) + Number(diff);  
				if(goods_number > stock)
				{
					alert("购买数量不能超过库存量");
					return;
				}
				if(goods_number < 1)
				{
					alert("购买数量不能少于1件");	
				}
				else
				{
					document.getElementById("goods_number_"+rec_id).value = goods_number;
					change_goods_number(rec_id,goods_number,pkg_num);
				}
            }
            function change_goods_number(rec_id, goods_number,pkg_num)
			{
				//检查库存
				var ele = document.getElementById("goods_number_"+rec_id);
				ele.value=ele.value.replace(/[^\d]/g,'');
				Ajax.call('flow.php', 'step=get_stock&rec_id=' + rec_id + '&spec_str=' + ele.getAttribute('spec'), getStockCallback, 'GET', 'JSON');
				
				
				//获取库存
				Ajax.call('flow.php?step=ajax_update_cart', 'rec_id=' + rec_id +'&goods_number=' + goods_number, change_goods_number_response, 'POST','JSON');                
            }
			function getStockCallback(res)
			{
				if (res.err_msg.length > 0)
				{
					alert(res.err_msg);
				}
				else
				{
					//如果输入的数量大于库存量，修改数量为库存量
					if(parseInt(document.forms['formCart'].elements[res.result.name].value) > parseInt(res.result.value))
						document.forms['formCart'].elements[res.result.name].value = res.result.value;
				}
			}
            function change_goods_number_response(result)
            {
                if (result.error == 0)
                {
                    var rec_id = result.rec_id;
                    //$('#goods_number_' +rec_id).val(result.goods_number);//更新数量
                    $('#goods_subtotal_' +rec_id).html(result.goods_subtotal);//更新小计
                    if (result.goods_number <= 0)
                    {// 数量为零则隐藏所在行
                        $('#tr_goods_' +rec_id).style.display = 'none';
                        $('#tr_goods_' +rec_id).innerHTML = '';
                    }
                    $('#total_desc').html(result.flow_info);//更新合计
                    if ($('ECS_CARTINFO'))
                    {//更新购物车数量
                       $('#ECS_CARTINFO').html(result.cart_info);
                    }
                }
                else if (result.message != '')
                {
                    //alert(result.message);
                }                
            }
        </script>
