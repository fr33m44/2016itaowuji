			prevCell:".pre_btn",
			nextCell:".next_btn",
			effect:"leftLoop"
	})
	/*放大镜缩略图点击选中效果*/
	$("#J_tabSlider ul li a").click(function(){
		$("#J_tabSlider ul li").removeClass("cur");
