{insert_scripts files='jquery-1.9.1.min.js'}
<script type="text/javascript">
	function sub() {

		var username = $('#username').val();

		var password = $('#password').val();

		if (username == "" || password == "") {
			$("#errorMsg").text("用户名或者密码不能为空");
			$("#errorMsg").show();
			setTimeout("$('#errorMsg').css('display','none')", 2000);
			return;
		}else {
			$(".overlay").css({
				'display' : 'block',
				'opacity' : '0.8'
			});
			$(".showbox").stop(true).animate({
				'margin-top' : '300px',
				'opacity' : '1'
			}, 200);
			var url = "user.php";

			var params = {
				username : $('#username').val(),
				password : $('#password').val(),
				act:'act_login',
				back_act:'./index.php',
				remember:'1'
				
			};
			jQuery.post(url, params,
					function(data) {
						if (data.bool) {
							location.href = "index.php";
						} else {
							$(".showbox").stop(true).animate({
								'margin-top' : '250px',
								'opacity' : '0'
							}, 400);
							$(".overlay").css({
								'display' : 'none',
								'opacity' : '0'
							});
							
							$("#errorMsg").text(data.error);
							$("#errorMsg").show();
							$('#username').val("");
							$('#password').val("");
							setTimeout("$('#errorMsg').css('display','none')",20000000);
							return;
						}

					}, 'json');

		}
	}
	$(document).ready(function() {

		document.onkeydown = function(e) {
			var ev = document.all ? window.event : e;
			if (ev.keyCode == 13) {
				sub();
			}
		}
		$('#errorMsg').hide();

		$("#btnLogin").click(sub);
		
		//setTimeout('$("#showOrHide").hide()',5000);
		

	});
</script>

